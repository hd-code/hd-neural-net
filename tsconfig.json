{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "target": "es6",

    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
  }
}
